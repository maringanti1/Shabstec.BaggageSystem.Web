@page "/"
<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
        position: relative;
        background: url('sample1.webp') no-repeat center center fixed;
        background-size: cover;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.7); /* Adjust the background color and opacity */
        z-index: 1;
    }

    .header-menu {
        position: relative; /* Set to relative so it's within the body */
        z-index: 2; /* Put it on top of the overlay */
        /* Your existing styles here */
    }

    .center-container {
        position: relative; /* Set to relative so it's within the body */
        z-index: 2; /* Put it on top of the overlay */
        /* Your existing styles here */
    }

    /* ... Other styles ... */

    /* Styles for the Register Now button */
    .register-button {
        display: inline-block;
        padding: 15px 30px;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        background-color: #007bff; /* Bootstrap's primary color */
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        z-index: 2; /* Put it on top of the overlay */
    }

        .register-button:hover {
            background-color: #0056b3; /* Darker shade on hover */
        } 
    /* Add styles to center the content and make text white and bold */
    .center-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh; /* Adjust as needed */
        color: white;
    }

    h1 {
        font-weight: bold;
    } 
     /* Style for the marquee presentation div */
        .marquee-container {
            overflow: hidden;
            width: 100%;
            margin: 20px 0;
        }

        .marquee-content {
            display: flex;
            animation: marquee 20s linear infinite;
        }

        /*.marquee-content img {
            max-width: 100px;
            margin: 0 10px;
        } */
        /* Style for the container of images */
        .image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
        }
        .image-container img {
            max-width: 100px;
            margin: 10px;
        }
</style>
<div class="center-container">
    <!-- Center container content -->
    <div data-ux="maindata">
        <div>
            <div>
                <h1 role="heading">Use the baggagebroker to securely exchange baggage messages</h1>
            </div>
        </div>
        <div>
            <p style="margin: 0">
                <span>Register to obtain your login information</span>
            </p>
        </div>
        <div style="max-width: 100%">
            <a data-ux-btn="primary"  class="register-button" href="/register"
            data-ux="ButtonPrimary">
                Register Now
            </a>
        </div>
    </div>
    <div class="marquee-container"> 
        <div class="marquee-content"> 
            <!-- Add your images here -->
            <img src="1.png" alt="Image 1">
            <img src="2.png" alt="Image 2">
            <img src="3.png" alt="Image 3">
            <img src="4.png" alt="Image 4">
            <!-- Add more images as needed -->
        </div>
    </div> 
</div>